<div class="outer-card">
    <div class="inner-card">
        <div class="inner-title">
            <div class="inner-title__first-row">
                <div class="inner-title__date-divider"></div>
                <div class="inner-title__date">
                    <%= blog.date %>
                </div>
                <div class="inner-title__date-divider"></div>
            </div>
        </div>
        <p>
            <%= blog.title %>
        </p>

        <div class="inner-body">
            <p>
                <%= blog.blogText %>
            </p>

        </div>
        <div class="inner-footer">
            <div class="inner-footer__left">
                <form action="/edit" method="POST">
                    <input type="hidden" name="id" value="<%=blog.id %>" />
                    <input type="hidden" name="author" value="<%=blog.author %>" />
                    <input type="hidden" name="body" value="<%=blog.blogText %>" />
                    <input type="hidden" name="date" value="<%=blog.date %>" />
                    <ul class="footer-list">
                        <li><button class="button-edit" value="edit" type="submit" name="choice"
                                class="edit-button">Edit</button>
                        </li>
                        <li> <button class="button-heart" value="like" type="submit" name="choice"><img
                                    src="images/heart.svg" alt="heart"></button>
                        </li>
                        <li> <button type="submit" class="button-trash" value="trash" name="choice"><img
                                    src="images/trash3.svg" alt="trash"></button></li>
                    </ul>
                </form>
            </div>
            <div class="inner-footer__right">
                <p>
                    <%= blog.author %>
                </p>
            </div>

        </div>
    </div>
</div>